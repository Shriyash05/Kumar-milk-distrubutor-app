# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API Base URL (CRITICAL - MUST BE SET)
# For production/App Store builds, use the Vercel production URL
EXPO_PUBLIC_API_PRODUCTION_URL=https://kumar-milk-backend.vercel.app/api

# For development, use your local machine's IP
# Note: The app will auto-detect your local IP if this is not set
# EXPO_PUBLIC_API_BASE_URL=http://192.168.1.100:5000/api

# Alternative development URLs (uncomment the one you want to use)
# EXPO_PUBLIC_API_BASE_URL=http://localhost:5000/api
# EXPO_PUBLIC_API_BASE_URL=http://10.0.2.2:5000/api  # For Android emulator

# Alternative production URLs (if you deploy elsewhere)
# EXPO_PUBLIC_API_PRODUCTION_URL=https://your-heroku-app.herokuapp.com/api
# EXPO_PUBLIC_API_PRODUCTION_URL=https://your-railway-app.railway.app/api

# ===========================================
# APP CONFIGURATION
# ===========================================

# App Information
EXPO_PUBLIC_APP_NAME=Kumar Milk Distributor
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUILD=1

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secret for client-side validation (if needed)
# NOTE: This should match your server's JWT_SECRET
# EXPO_PUBLIC_JWT_SECRET=your-matching-jwt-secret

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Demo Mode (DISABLE IN PRODUCTION)
EXPO_PUBLIC_ENABLE_DEMO_MODE=false

# Enable biometric authentication
EXPO_PUBLIC_ENABLE_BIOMETRICS=true

# Enable offline mode
EXPO_PUBLIC_ENABLE_OFFLINE=true

# Enable push notifications
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# ===========================================
# DEBUG & DEVELOPMENT SETTINGS
# ===========================================

# Debug mode (DISABLE IN PRODUCTION)
EXPO_PUBLIC_DEBUG_MODE=false

# Log API requests for debugging (DISABLE IN PRODUCTION)
EXPO_PUBLIC_LOG_API_REQUESTS=false

# Enable error reporting
EXPO_PUBLIC_ERROR_REPORTING=true

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Enable analytics tracking
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# Analytics provider configuration
# EXPO_PUBLIC_ANALYTICS_ID=your-analytics-id

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================

# Maps configuration
# EXPO_PUBLIC_MAPS_API_KEY=your-maps-api-key

# Push notification configuration
# EXPO_PUBLIC_PUSH_TOKEN=your-expo-push-token

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================

# Environment identifier
EXPO_PUBLIC_ENVIRONMENT=production

# API timeout (in milliseconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# Max retry attempts for failed requests
EXPO_PUBLIC_MAX_RETRIES=3
